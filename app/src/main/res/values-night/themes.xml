<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark Theme -->
    <style name="Theme.Moneymate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design Colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Custom Theme Attributes for Dark Mode -->
        <item name="backgroundColor">@color/background_dark</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="primaryBackgroundColor">#1F2937</item>
        <item name="secondaryBackgroundColor">#374151</item>
        <item name="textPrimaryColor">@color/text_primary_dark</item>
        <item name="textSecondaryColor">@color/text_secondary_dark</item>
        <item name="borderColor">@color/border_dark</item>
        <item name="accentColor">@color/primary_dark</item>
        <item name="surfaceColor">@color/surface_dark</item>
        <item name="headerBackgroundColor">#374151</item>
        <item name="iconTintColor">@color/primary_dark</item>
        <item name="buttonBackgroundColor">@color/primary_dark</item>
        <item name="inputBackgroundColor">#4B5563</item>
        <item name="dividerColor">#6B7280</item>

        <!-- Status bar dan navigation bar untuk dark mode -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Background untuk window -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

</resources>