<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#8B5CF6" />
            <stroke
                android:width="1dp"
                android:color="#7C3AED" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#F3F4F6" />
            <stroke
                android:width="2dp"
                android:color="#8B5CF6" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#F8FAFC" />
            <stroke
                android:width="1dp"
                android:color="#E5E7EB" />
        </shape>
    </item>

</selector>
