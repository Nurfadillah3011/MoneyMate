<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBackgroundColor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/backgroundColor">

            <!-- Card container -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingTop="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="370dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="?attr/cardBackgroundColor">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/card_bg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_card" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Saldo Anda"
                                    android:textSize="15sp"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/poppins_light"/>

                                <TextView
                                    android:id="@+id/tv_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Rp 0"
                                    android:textColor="@android:color/white"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_currency_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‰ˆ $0.00 USD"
                                    android:textSize="13sp"
                                    android:textColor="@android:color/white"
                                    android:layout_marginTop="2dp"
                                    android:visibility="visible"
                                    android:fontFamily="sans-serif" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:background="?attr/cardBackgroundColor"
                android:elevation="4dp"
                android:padding="20dp"
                android:gravity="center"
                android:weightSum="3">

                <!-- Konverter Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circle_background_purple">

                        <ImageButton
                            android:id="@+id/action_currency_converter"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_convert"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:contentDescription="Konverter"
                            app:tint="?attr/iconTintColor" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konverter"
                        android:textSize="12sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Grafik Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circle_background_purple"
                        android:padding="8dp">

                        <ImageButton
                            android:id="@+id/btn_chart"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_chart"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:contentDescription="Grafik"
                            app:tint="?attr/iconTintColor" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grafik"
                        android:textSize="12sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Mata Uang Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circle_background_purple">

                        <ImageButton
                            android:id="@+id/btn_currency"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_currency"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:contentDescription="Mata Uang"
                            app:tint="?attr/iconTintColor" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mata Uang"
                        android:textSize="12sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Income & Expense Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:background="?attr/cardBackgroundColor"
                android:padding="14dp"
                android:gravity="center"
                app:cardCornerRadius="16dp"
                android:elevation="4dp">

                <!-- Income -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_income"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukan"
                        android:textSize="13sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tv_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/income_green"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="?attr/dividerColor"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <!-- Expense -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_expense"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textSize="13sp"
                        android:textColor="?attr/textSecondaryColor"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tv_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/expense_red"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Transaction List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="7dp"
                android:elevation="8dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/new_transaction"
                            android:layout_marginRight="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transaksi Terbaru"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:fontFamily="@font/poppins_light" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/dividerColor"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:padding="10dp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/empty_state"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_empty"
                            android:layout_marginBottom="18dp"
                            app:tint="?attr/iconTintColor"
                            android:alpha="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum ada transaksi"
                            android:textSize="15sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ayo mulai catat transaksi pertamamu!"
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:alpha="0.7" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>