<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_height="?attr/actionBarSize"
        android:elevation="6dp"
        android:background="?attr/headerBackgroundColor"
        android:titleTextColor="@android:color/white"
        app:tint="?attr/iconTintColor" />

    <!-- Month Navigation -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_prev_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_left"
                android:backgroundTint="?attr/accentColor"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Januari 2024"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/textPrimaryColor"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"/>

            <Button
                android:id="@+id/btn_next_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_arrow_right"
                android:backgroundTint="?attr/accentColor"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Expense Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pengeluaran Bulan Ini"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/textSecondaryColor"
                android:fontFamily="@font/poppins_light" />

            <TextView
                android:id="@+id/tv_total_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?attr/accentColor"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_semibold" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:text="Refresh Data"
                android:textSize="12sp"
                android:textColor="?attr/accentColor"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:minHeight="0dp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Chart Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Pie Chart -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp" />

            <!-- Empty Message -->
            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tidak ada data pengeluaran\nData pengeluaran untuk bulan ini kosong"
                android:textSize="16sp"
                android:textColor="?attr/textPrimaryColor"
                android:textAlignment="center"
                android:gravity="center"
                android:padding="32dp"
                android:fontFamily="@font/poppins_semibold"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>