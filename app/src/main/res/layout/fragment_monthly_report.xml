<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/secondaryBackgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <!-- Month Navigation -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_prev_month"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="‹"
                        android:textSize="20sp"
                        android:textColor="?attr/accentColor"
                        android:background="@drawable/ic_arrow_left"
                        style="?android:attr/borderlessButtonStyle" />

                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Januari 2024"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_semibold"/>

                    <Button
                        android:id="@+id/btn_next_month"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="›"
                        android:textSize="20sp"
                        android:textColor="?attr/accentColor"
                        android:background="@drawable/ic_arrow_right"
                        style="?android:attr/borderlessButtonStyle" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Monthly Summary -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringkasan Bulanan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textPrimaryColor"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Pemasukan:"
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:fontFamily="@font/poppins_light"/>

                        <TextView
                            android:id="@+id/tv_total_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textStyle="bold"
                            android:textColor="@color/income_green"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Pengeluaran:"
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:fontFamily="@font/poppins_light"/>

                        <TextView
                            android:id="@+id/tv_total_expense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/expense_red" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/gradient_divider"
                        android:layout_marginVertical="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saldo:"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/income_green"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jumlah Transaksi:"
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:fontFamily="@font/poppins_light"/>

                        <TextView
                            android:id="@+id/tv_transaction_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 transaksi"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textSecondaryColor"
                            android:fontFamily="@font/poppins_light"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Transaction List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:paddingBottom="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wallet"
                            android:layout_marginRight="12dp"
                            app:tint="?attr/iconTintColor" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Daftar Transaksi"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:fontFamily="@font/poppins_semibold"/>

                    </LinearLayout>

                    <!-- RecyclerView dengan scroll optimal -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_transactions"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:nestedScrollingEnabled="true"
                        android:overScrollMode="always"
                        android:fadeScrollbars="false"
                        android:scrollbarSize="4dp"
                        android:scrollbarStyle="outsideOverlay" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/layout_empty_state"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="48dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/circle_background_light"
                            android:gravity="center"
                            android:layout_marginBottom="24dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@android:drawable/ic_menu_agenda"
                                app:tint="?attr/iconTintColor"
                                android:alpha="0.6" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum ada transaksi"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimaryColor"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mulai dengan menambahkan\ntransaksi pertama Anda"
                            android:textSize="14sp"
                            android:textColor="?attr/textSecondaryColor"
                            android:gravity="center"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="24dp"
                            android:fontFamily="@font/poppins_light"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>